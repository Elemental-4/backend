{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2020": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": 11
	},
	"rules": {
		"quotes": [
			"error",
			"double",
			{
				"avoidEscape": true
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"indent": [
			"error",
			"tab"
		],
		"no-unused-vars": "warn"
	}
}
